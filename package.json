{
  "name": "voting-dapp",
  "version": "1.0.0",
  "description": "Blockchain-based voting application for classroom use",
  "main": "truffle-config.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
